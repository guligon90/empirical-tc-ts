{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "outDir": "./build",
    "sourceMap": true,
    "lib": ["es2019", "dom", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown"],
    "rootDirs": ["./src", "./test"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts", "./test/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
